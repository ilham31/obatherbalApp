<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".herbalJava.tabDiseaseHerbal">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    >
                    <TextView
                        android:layout_marginBottom="15dp"
                        android:id="@+id/detailNameHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/detailEfficacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/detailRefHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/descriptionDclassHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />

                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/diseaseDclassHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />
                    <TextView
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/companyHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        />

                    <TextView
                        android:id="@+id/refDiseaseDclassHerbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_gravity="center_horizontal|center"
                        />
                </LinearLayout>
            </ScrollView>
            <ProgressBar
                android:id="@+id/loadDiseaseDetailJamu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>




</FrameLayout>