<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="10dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/namaCrude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Crude"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:id="@+id/namaLatinLokal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaCrude"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/namaLatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama latin /"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/namaLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="local"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/gName"
            android:layout_below="@id/namaLatinLokal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/positionCrude"
            android:layout_below="@id/gName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/effectCrude"
            android:layout_below="@id/positionCrude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/refCrude"
            android:layout_below="@id/effectCrude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>