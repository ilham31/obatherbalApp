<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".analysisJava.prediction.chooseMethod.chooseMethod">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/textPilihjenis"
            android:layout_below="@id/search_herbal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Method :"
            />

        <Spinner
            android:layout_below="@id/textPilihjenis"
            android:id="@+id/pilihMetode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </Spinner>

        <Switch
            android:id="@+id/optimization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="56dp"
            android:layout_marginTop="100dp"
            android:text="Optimization     "
            android:checked="false"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_next_fragment_step_2"
            android:text="Next"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>

</FrameLayout>